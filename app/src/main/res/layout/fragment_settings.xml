<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".screens.SettingsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/settingsBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_marginTop="@dimen/dimen_24"
            android:contentDescription="@string/back"
            android:padding="5dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:text="Settings"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/settingsBackButton"
            app:layout_constraintStart_toEndOf="@+id/settingsBackButton"
            app:layout_constraintTop_toTopOf="@+id/settingsBackButton" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_32"
            android:text="GENERAL SETTINGS"
            android:textColor="#737373"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsBackButton" />


        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_48"
            android:text="HELP CENTER"
            android:textColor="#737373"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_48"
            android:text="APPLICATION"
            android:textColor="#737373"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:rotation="180"
            android:src="@drawable/ic_night_icon"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:tint="#fff" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Night Mode"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/nightModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_24"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.0"
            app:thumbTint="@color/colorPrimary"
            app:trackTint="@color/switchTrackColor" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_delete_all_videos"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:tint="#fff" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:tint="#fff" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_info"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:tint="#fff" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_android"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            app:tint="#fff" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_bug"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            app:tint="#fff" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_delete_all_photos"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:tint="#fff" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_border_5"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="nightmodeicon"
            android:padding="7dp"
            android:src="@drawable/ic_image"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:tint="#fff" />

        <TextView
            android:id="@+id/deleteFavVideosText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="Delete Favorites Videos"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toStartOf="@+id/deleteFavVideosButton"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/rateMyAppText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="Rate My App"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toStartOf="@+id/rateMyAppButton"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/bugReportText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="Bug report"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintEnd_toStartOf="@+id/bugReportButton"
            app:layout_constraintStart_toEndOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/imageView13"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="About"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toStartOf="@+id/aboutButton"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/imageView15"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/appVersionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="App Version"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17"
            app:layout_constraintEnd_toStartOf="@+id/appVersionButton"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toTopOf="@+id/imageView17"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/deleteFavPhotosText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="Delete Favorites Photos"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintEnd_toStartOf="@+id/deleteFavPhotosButton"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/exportQualityText"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingEnd="10dp"
            android:text="Choose Export Quality"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/deleteFavVideosButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/deleteFavVideosText"
            app:layout_constraintEnd_toEndOf="@+id/nightModeSwitch"
            app:layout_constraintTop_toTopOf="@+id/deleteFavVideosText"
            app:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/deleteFavPhotosButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/deleteFavPhotosText"
            app:layout_constraintEnd_toEndOf="@+id/deleteFavVideosButton"
            app:layout_constraintTop_toTopOf="@+id/deleteFavPhotosText"
            app:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/exportQualityButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/exportQualityText"
            app:layout_constraintEnd_toEndOf="@+id/deleteFavPhotosButton"
            app:layout_constraintTop_toTopOf="@+id/exportQualityText"
            app:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/rateMyAppButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/rateMyAppText"
            app:layout_constraintEnd_toEndOf="@+id/deleteFavPhotosButton"
            app:layout_constraintTop_toTopOf="@+id/rateMyAppText"
            app:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/bugReportButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/bugReportText"
            app:layout_constraintEnd_toEndOf="@+id/rateMyAppButton"
            app:layout_constraintTop_toTopOf="@+id/bugReportText"
            app:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/aboutButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/aboutText"
            app:layout_constraintEnd_toEndOf="@+id/bugReportButton"
            app:layout_constraintTop_toTopOf="@+id/aboutText"
            app:tint="@color/colorWhite" />

        <ImageView
            android:id="@+id/appVersionButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/appVersionText"
            app:layout_constraintEnd_toEndOf="@+id/aboutButton"
            app:layout_constraintTop_toTopOf="@+id/appVersionText"
            app:tint="@color/colorWhite" />


        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView17" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>