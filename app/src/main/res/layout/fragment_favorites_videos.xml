<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".screens.FavoritesVideosFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favouriteVideosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:clipToPadding="true"
            android:overScrollMode="never"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="12dp"
            android:scrollbars="none" />


        <com.hanks.htextview.rainbow.RainbowTextView
            android:id="@+id/nothingHereVideosText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Nothing here yet..."
            android:textAlignment="center"
            android:textSize="22sp"
            android:visibility="gone"
            app:colorSpace="150dp"
            app:colorSpeed="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backPageFavButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_5"
                android:backgroundTint="@color/colorBackgroundLight"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="@dimen/dimen_16"
                android:paddingEnd="@dimen/dimen_16"
                android:text="Back Page"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/nextPageFavButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_5"
                android:backgroundTint="@color/colorBackgroundLight"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="@dimen/dimen_16"
                android:paddingEnd="@dimen/dimen_16"
                android:text="Next Page"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />


        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
